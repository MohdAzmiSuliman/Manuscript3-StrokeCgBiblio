@article{ WOS:000277710000024,
Author = {Shyu, Yea-Ing L. and Kuo, Li-Min and Chen, Min-Chi and Chen, Sien-Tsong},
Title = {A clinical trial of an individualised intervention programme for family
   caregivers of older stroke victims in Taiwan},
