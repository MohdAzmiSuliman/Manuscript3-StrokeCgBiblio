@article{ WOS:000366754600003,
Author = {Kuo, Y-W. and Yen, M. and Fetzer, S. and Lee, J-D. and Chiang, L-C.},
Title = {Effect of family caregiver oral care training on stroke survivor oral
   and respiratory health in Taiwan: a randomised controlled trial},
