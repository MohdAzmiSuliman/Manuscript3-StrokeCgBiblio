@article{ WOS:000262617300008,
Author = {Smith, Scott D. and Gignac, Monique A. M. and Richardson, Denyse and
   Cameron, Jill I.},
Title = {Differences in the Experiences and Support Needs of Family Caregivers to
   Stroke Survivors: Does Age Matter?},
