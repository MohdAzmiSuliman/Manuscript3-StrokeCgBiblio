@article{ WOS:000308981100005,
Author = {Lurbe-Puerto, Katia and Leandro, Maria-Engracia and Baumann, Michele},
Title = {Experiences of Caregiving, Satisfaction of Life, and Social
   Repercussions Among Family Caregivers, Two Years Post-Stroke},
Journal = {SOCIAL WORK IN HEALTH CARE},
