Author = {Olivier, Cheryl L. and Phillips, Jill and Roy, Dianne E.},
Title = {To be or not to be? A caregiver's question: the lived experience of a
   stroke family during the first 18 months poststroke},
Journal = {SCANDINAVIAN JOURNAL OF CARING SCIENCES},
