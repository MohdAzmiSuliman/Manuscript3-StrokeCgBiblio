Author = {Wu, Ming-Hsiu and Lee, Sheuan and Su, Hui-Yi and Pai, Hsiang-Chu},
Title = {The effect of cognitive appraisal in middle-aged women stroke survivors
   and the psychological health of their caregivers: a follow-up study},
Journal = {JOURNAL OF CLINICAL NURSING},
