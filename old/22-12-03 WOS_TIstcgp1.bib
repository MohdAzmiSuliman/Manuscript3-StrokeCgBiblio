@article{ WOS:000372718200019,
Author = {Chuluunbaatar, Enkhzaya and Chou, Yiing-Jenq and Pu, Christy},
Title = {Quality of life of stroke survivors and their informal caregivers: A
   prospective study},
Journal = {DISABILITY AND HEALTH JOURNAL},
