@article{ WOS:000339240700010,
Author = {White, Carole L. and Barrientos, Rosalinda and Dunn, Kelly},
Title = {Dimensions of Uncertainty After Stroke: Perspectives of the Stroke
   Survivor and Family Caregiver},
Journal = {JOURNAL OF NEUROSCIENCE NURSING},
