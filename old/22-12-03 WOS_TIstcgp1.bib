Author = {Krieger, Theresia and Boumans, Nicolle and Feron, Frans and Dorant,
   Elisabeth},
Title = {The development of implementation management instruments for a new
   complex stroke caregiver intervention based on systematic stakeholder
   and risk analyses},
Journal = {SCANDINAVIAN JOURNAL OF CARING SCIENCES},
