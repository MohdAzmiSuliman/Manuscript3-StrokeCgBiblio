Author = {Azizi, Azim and Khatiban, Mahnaz and Mollai, Zhale and Mohammadi, Younes},
Title = {Effect of Informational Support on Anxiety in Family Caregivers of
   Patients with Hemiplegic Stroke},
Journal = {JOURNAL OF STROKE \& CEREBROVASCULAR DISEASES},
