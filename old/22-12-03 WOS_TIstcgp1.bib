Title = {Caregiver Delivered Sensory Electrical Stimulation for Post Stroke Upper
   Limb Spasticity: A Single Blind Crossover Randomized Feasibility Study},
Journal = {HEALTH AND TECHNOLOGY},
Year = {2020},
Volume = {10},
