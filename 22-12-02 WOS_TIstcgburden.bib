Author = {Chafjiri, Razieh Torabi and Navabi, Asrin and Shamsalinia, Abbas and
   Ghaffari, Fatemeh},
Title = {The relationship between the spiritual attitude of the family caregivers
   of older patients with stroke and their burden},
