@article{ WOS:000267235300003,
Author = {Choi-Kwon, Smi and Mitchell, Pamela H. and Veith, Richard and Teri,
   Linda and Buzaitis, Ann and Cain, Kevin C. and Becker, Kyra J. and
   Tirschwell, David and Fruin, Michael and Choi, Jimi and Kim, Jong S.},
Title = {Comparing Perceived Burden for Korean and American Informal Caregivers
   of Stroke Survivors},
Journal = {REHABILITATION NURSING},
Year = {2009},
Volume = {34},
Number = {4, SI},
Pages = {141-150},
Month = {JUL-AUG},
Abstract = {Little is known about the burden of cross-cultural care for stroke
   patients. This article compares the perceived burden for caregivers of
   stroke survivors in Korea and the United States. A brief interview was
   conducted to determine specific problem areas for caregivers. Caregiver
   burden (using the Sense of Competence Questionnaire) mid social support
   (using the ENRICHD Social Support Inventory) also were measured. The
   overall-sense-of-burden-from-caregiving score was significantly higher
   in the Korean cohort than in the American cohort, as was the scale
   regarding satisfaction with the relationship with the recipient of care.
