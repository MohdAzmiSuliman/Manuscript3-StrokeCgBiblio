@article{ WOS:000557742400001,
Author = {Guler, Mehmet Akif and Erhan, Belgin and Yilmaz Yalcinkaya, Ebru},
Title = {Caregiver burden in stroke inpatients: a randomized study comparing
   robot-assisted gait training and conventional therapy},
Journal = {ACTA NEUROLOGICA BELGICA},
Year = {2021},
