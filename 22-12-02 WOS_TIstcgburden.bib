Title = {The Effects of Patients' and Caregivers' Characteristics on the Burden
   of Families Caring for Stroke Survivors},
Journal = {INTERNATIONAL JOURNAL OF ENVIRONMENTAL RESEARCH AND PUBLIC HEALTH},
Year = {2021},
